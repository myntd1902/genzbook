@model Category
@{
    ViewData["Title"] = "THÊM";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text" style="color:white">THÊM SẢN PHẨM</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-light" style="width:150px"><i class="bi bi-save2"></i> &nbsp; Lưu</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-dark" style="width:150px">
            <i class="bi bi-list-ul"></i> &nbsp; Trở về
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}