@model Category
@{
    ViewData["Title"] = "XÓA";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text" style="color:white">XOÁ SẢN PHẨM</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-outline-light" style="width:150px"><i class="bi bi-save2"></i> &nbsp; Xóa</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-dark" style="width:150px">
            <i class="bi bi-list-ul"></i> &nbsp; Trở về
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}